{
  "shop" : {
    "currency": "UAH",
    "language": "ua",
    "weightUnit": "kg"
  },
  "catalog": {
    "product": {
      "image": {
        "thumbnail": {
          "width": 100,
          "height": 100
        },
        "listing": {
          "width": 300,
          "height": 300
        },
        "single": {
          "width": 500,
          "height": 500
        }
      }
    },
    "showOutOfStockProduct": false
  },
  "system": {
    "theme": "sport",
    "extensions": [
      {
        "name": "productComment",
        "resolve": "extensions/product_review",
        "enabled": true,
        "priority": 10
      },
      {
        "name": "Contacts",
        "resolve": "extensions/contact",
        "enabled": true,
        "priority": 10
      }
    ]
  },
  "themeConfig": {
    "logo": {
      "alt": "Vlad shop logo",
      "src": "/logo.svg",
      "width": 100,
      "height": 100
    },
    "headTags": {
      "links": [
        {
          "rel": "icon",
          "href": "/favicon.ico"
        },
        {
          "rel": "icon",
          "size": "32x32",
          "href": "/favicon-32x32.png"
        },
        {
          "rel": "manifest",
          "href": "/site.webmanifest"
        },
        {
          "rel": "icon",
          "size": "16x16",
          "href": "/favicon-16x16.png"
        }
      ],
      "metas": [],
      "scripts": []
    },
    "copyRight": "© 2024 Vlad shop. All Rights Reserved."
  },
  "customer": {
    "addressSchema": {
      "type": "object",
      "properties": {
        "full_name": {
          "type": "string"
        },
        "telephone": {
          "type": [
            "string", "number"
          ]
        },
        "address_1": {
          "type": "string"
        },
        "address_2": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "province": {
          "type": "string"
        },
        "postcode": {
          "type": [
            "string", "number"
          ]
        }
      },
      "required": [
        "full_name",
        "telephone",
        "address_1",
        "city",
        "province"
      ],
      "errorMessage": {
        "properties": {
          "full_name": "Треба заповнити ваше ФІО",
          "telephone": "Невірно вказаний номер телефону",
          "address_1": "Треба сказати адресу",
          "province": "Треба вказати область"
        }
      },
      "additionalProperties": true
    }
  }
}